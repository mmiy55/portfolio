
<div class="wrapper-projects  mb-5">
        <div class="title pjt"> <i class="fa-solid fa-rocket"></i> Projects</div>

        <div class="cards">
          <% data.projects.each do |project| %>
            <div class="card-pjt mb-3 border border-2">
              <%= image_tag project.image, alt: "project image", class:"card-img-top" %>
            <div class="card-body">
            <div class="card-pjt header">
              <h4 class="card-title"> <%= project.name %></h4>
                  <div class="pjt-link">
                              <% link_to project.url,  target: '_blank' , class:"button-link" do %>
                                Link <i class="fas fa-external-link-alt" ></i>
                              <% end %>
                  </div>
            </div>
            <div class="card-pjt-infos">
                <p class="card-text"><%= project.description %></p>
                  <p><i class="fa-solid fa-wand-magic-sparkles"></i> <%= project.role %></p>
                    <p><i class="fa-solid fa-people-group"></i> <%= project.info %></p>
                      <p><i class="fa-solid fa-code"></i> <%= project.stack %></p>
            </div>
             </div>
          </div>
          <% end %>
        </div>
</div>
