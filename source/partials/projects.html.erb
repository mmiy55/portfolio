<div class="row my-5">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <div class="title"> Projects</div>
        <div class="cards">
          <% data.projects.each do |project| %>
            <div class="card-pjt mb-3">
              <%= image_tag project.image, alt: "project image" %>
            </div>
              <div class="card-pjt-infos w-100 mb-3">
                  <div class="title d-flex justify-content-center"> <%= project.name %>
                  <% link_to project.url, class: 'external-link', target: '_blank' do %>
                    <i class="fas fa-external-link-alt"></i>
                  <% end %>
                  </div>
                  <p><%= project.role %></p>

                <p><%= project.description %></p>
                <p><%= project.info %></p>
                <p>Tech-stack: <%= project.stack %></p>

              </div>

          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
